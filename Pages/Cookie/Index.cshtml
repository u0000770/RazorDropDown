@model RazorDropDown.Pages.Cookie.IndexModel


@{
    ViewData["Title"] = "Page 1 - Set Cookie";
}

<h1>Page 1</h1>
<form method="post">
    <div class="form-group">
        <label for="name">Enter your name:</label>
        <input type="text" id="name" asp-for="UserName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Name in Cookie</button>
</form>

<a asp-page="Page2">Go to Page 2</a>
